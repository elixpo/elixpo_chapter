{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "outDir": "dist",
    "rootDir": ".",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "sourceRoot": "/",
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": false,
    "removeComments": true
  },
  "include": [
    "scripts/**/*.ts",
    "scripts/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "api"
  ]
}
