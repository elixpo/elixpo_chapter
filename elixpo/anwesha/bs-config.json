{
  "server": {
    "baseDir": ".",
    "middleware": {
      "1": {
        "route": "/api",
        "handle": {
          "target": "http://localhost:3004",
          "proxy": true,
          "changeOrigin": true,
          "logLevel": "debug"
        }
      },
      "2": {
        "route": "/",
        "handle": "historyApiFallback"
      }
    }
  },
  "watch": true,
  "files": ["*.html", "css/*.css", "js/*.js"],
  "watchOptions": {
    "ignoreInitial": true,
    "ignored": ["node_modules", ".git", "*.json"]
  },
  "injectChanges": true,
  "codeSync": true,
  "reloadDelay": 500,
  "notify": true
}